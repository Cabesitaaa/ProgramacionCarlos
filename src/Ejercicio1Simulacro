import java.util.Scanner;
public class ExamenSimulacro {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        int opcion = 0;

        while (opcion != 3) {
            System.out.println("Bienvenido al menu principal");
            System.out.println("(1). Aprobados y suspendidos");
            System.out.println("(2). Billetes a Madrid");
            System.out.println("(3). Salir");
            System.out.print("Ingresa una opcion: ");

            opcion = in.nextInt();

            switch (opcion) {
                case 1:

                    int notas = 0;
                    int aprobados = 0, suspendidos = 0;

                    System.out.println("ingresa las notas de los alumnos y introduce un numero negativo para finalizar: ");
                    notas = in.nextInt();

                    while (notas >= 0) {
                        if (notas > 10) {
                            System.out.println("Una nota no puede ser mayor a 10");
                        } else if (notas < 5) {
                            suspendidos++;
                        } else {
                            aprobados++;
                        }
                        notas = in.nextInt();
                        }

                        if (aprobados > suspendidos) {
                            System.out.println("Hay " +aprobados+ " aprobados y " +suspendidos+ " suspendidos por lo tanto hay mas aprobados que suspendidos");
                            System.out.println("Suspendidos: " + suspendidos);
                            System.out.println("Aprobados: " + aprobados);
                        }
                        else if (suspendidos > aprobados) {
                            System.out.println("Hay " +suspendidos+ " suspendidos y " +aprobados+ " aprobados por lo tanto hay mas suspendidos que aprobados");
                            System.out.println("Suspendidos: " + suspendidos);
                            System.out.println("Aprobados: " + aprobados);
                        }
                        else {
                            System.out.println("Hay los mismo aprobados que suspendidos");
                            System.out.println("Suspendidos: " + suspendidos);
                            System.out.println("Aprobados: " + aprobados);
                        }
                        break;
                case 2:
                    
                    double precioNormal = 32.0;
                    double total = 0;
                    int numMiembros;

                    System.out.print("Inserta la cantidad de miembros que hay en la familia: ");
                    numMiembros = in.nextInt();

                    in.nextLine();

                    for (int cont = 1; cont <= numMiembros; cont++) {
                        System.out.print("Nombre del miembro " + cont + ": ");
                        String nombre = in.nextLine();

                        System.out.print("Edad de " + nombre + ": ");
                        int edad = in.nextInt();
                        in.nextLine();

                        double precio = precioNormal;

                        if (edad >= 65) {
                            precio = precioNormal * 0.90;
                        } else if (edad >= 12 && edad <= 15) {
                            precio = precioNormal * 0.92;
                        } else if (edad >= 4 && edad <= 11) {
                            precio = precioNormal * 0.65;
                        } else if (edad < 4) {
                            precio = 0;
                        }

                        System.out.println("Billete de " + nombre + ": " + precio + " €");
                        total += precio;
                    }
                    System.out.println("Coste total de los billetes: " + total + " €");
                    break;
            }
        }
    }
}
